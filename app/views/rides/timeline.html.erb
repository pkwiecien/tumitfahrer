                  <h4 style="margin-top: 10px;color: #0076b3"> &nbsp;<%= raw rss1.title.first(20) %></h4>
                  <p style="margin-top: -4px;"> &nbsp;

                    <img src="<%= asset_path "TimeIconBlack.png" %> " style="height: 14px;"> &nbsp; <%= rss1.pubDate.strftime("%d-%m-%Y") %> &nbsp;

