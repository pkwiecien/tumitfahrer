<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <%= form_for(:session, url: sessions_path, :html => {:autocomplete => "off"}) do |f|   %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>

    <% end %>

    <p>New user? <%= link_to "Sign up here", signup_path %></p>
    <p><%= link_to "Forgot password?", new_password_reset_path %></p>
  </div>
</div>

